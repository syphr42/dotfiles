{
    "editor.multiCursorModifier": "alt",
    "editor.rulers": [71,80,120],

    "explorer.confirmDragAndDrop": false,

    "files.associations": {
        "Dockerfile*": "dockerfile"
    },
    "files.enableTrash": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "openhab.connection.host": "openhab.syphr.net",
    "openhab.connection.port": 443,
    "openhab.itemCasing": "snake",
    "openhab.languageserver.remotePort": 32000,

    "shellcheck.enableQuickFix": true,
    "shellcheck.customArgs": [
        "-x"
    ],

    "window.autoDetectColorScheme": true,

    "workbench.startupEditor": "newUntitledFile",

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "docker.showStartPage": false,
    "redhat.telemetry.enabled": false,

    "vs-kubernetes": {
        "vs-kubernetes.enable-snap-flag": true
    },

    "ruby.lint": {
        "rubocop": true
    },
    "ruby.useLanguageServer": true,
    "solargraph.formatting": true,
    "[ruby]": {
        "editor.defaultFormatter": "castwide.solargraph"
    },
    "remote.containers.dockerPath": "podman",
    "remote.SSH.defaultExtensions": [
        "gitpod.gitpod-remote-ssh"
    ],
    "remote.SSH.configFile": "/tmp/gitpod_ssh_config-62413-jXwUbb7FYIA7",
    "docker.dockerPath": "podman"
}
