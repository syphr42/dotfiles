{
    "editor.multiCursorModifier": "alt",
    "editor.rulers": [100],

    "explorer.confirmDragAndDrop": false,

    "files.associations": {
        "Dockerfile*": "dockerfile"
    },
    "files.enableTrash": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    "openhab.connection.host": "openhab.syphr.net",
    "openhab.connection.port": 443,
    "openhab.itemCasing": "snake",
    "openhab.languageserver.remotePort": 32000,

    "shellcheck.enableQuickFix": true,
    "shellcheck.customArgs": [
        "-x"
    ],

    "workbench.startupEditor": "newUntitledFile",

    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "redhat.telemetry.enabled": false,

    "vs-kubernetes": {
        "vs-kubernetes.enable-snap-flag": true
    },
    "dev.containers.dockerPath": "podman",
    "remote.SSH.defaultExtensions": [
        "gitpod.gitpod-remote-ssh"
    ],
    "remote.SSH.configFile": "/tmp/gitpod_ssh_config-62413-jXwUbb7FYIA7",
    "docker.dockerPath": "podman",
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },

    "terminal.integrated.allowChords": false,
    "ansible.python.interpreterPath": "/usr/bin/python3",
    "window.autoDetectColorScheme": true,
    "editor.renderWhitespace": "all",
    "cSpell.userWords": [
        "gameplay"
    ],
    "containers.containerCommand": "podman",
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    }
}
